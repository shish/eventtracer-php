{
  "name": "shish/eventtracer-php",
  "type": "library",
  "description": "An API to write JSON traces as used by the Chrome Trace Viewer",
  "license": "MIT",
  "homepage": "https://github.com/shish/eventtracer-php",
  "authors": [
    {
      "name": "Shish",
      "email": "webmaster@shishnet.org",
      "homepage": "http://shishnet.org",
      "role": "Developer"
    }
  ],
  "autoload": {
    "classmap": [
      "src/"
    ]
  },
  "require": {
    "php": "^8.2",
    "ext-json": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer" : "^3.64",
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^2.0"
  },
  "scripts": {
    "check": [
      "@format",
      "@stan",
      "@test"
    ],
    "format": "php-cs-fixer fix",
    "stan-ci": "phpstan analyse --error-format=github src --level 6",
    "stan": "phpstan analyse --error-format=raw src --level 6",
    "test": "phpunit tests"
  }
}
